<% title("Registro") %>

<div id="register" class="static login">
  <div class="content_header static_header content_header-js">
    <ul class="breadcrumbs" itemprop="breadcrumb">
      <li class="breadcrumb"><%= link_to content_tag(:i, content_tag(:span, "Portada"), :class => "icon-home"), root_path, :title => "Ir a la Portada" %></li>
      <li class="breadcrumb"><p>Regístrate</p></li>
    </ul>
  </div>

  <div class="questions clearfix">
    <div class="fields_group">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <fieldset>
          <legend>Regístrate</legend>
          <div class="field">
            <%= f.label :name %>
            <%= f.text_field :name, :autofocus => "autofocus" %>
          </div>

          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <%= f.password_field :password %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation %>
          </div>
        </fieldset>

        <ul class="menu answers_menu action_menu">
          <li class="menu_item">
            <button type="submit" name="commit">Regístrate!</button>
          </li>
        </ul>
      <% end %>
    </div>

    <div class="social">
      <%- if controller_name != 'sessions' %>
        <p>
          ¿Ya tienes una cuenta?
          <%= link_to "Pasa por aquí!", new_session_path(resource_name) %>
        </p>
      <% end -%>

      <%- if devise_mapping.omniauthable? %>
        <p>Entra con tu perfil de <strong>Facebook</strong> o <strong>Twitter</strong> para usar esta web de forma más cómoda.</p>

        <%= link_to content_tag(:span, "Entra con Facebook"), user_omniauth_authorize_path(:facebook), :class => "facebook_connect" %>
        <%= link_to content_tag(:span, "Entra con Twitter"), user_omniauth_authorize_path(:twitter), :class => "twitter_connect" %>
      <% end -%>
    </div>
  </div>
</div>
