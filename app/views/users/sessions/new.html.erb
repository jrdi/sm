<% title("Acceso") %>

<div id="login" class="static">
	<div id="questions-header" class="answers-header">
    <ul id="breadcrumb" itemprop="breadcrumb">
      <li class="breadcrumb-item breadcrumb-home"><a href="/" title="Ir a la Portada"><span>Portada</span></a></li>
      <li class="breadcrumb-item breadcrumb-tag">
        <p>Accede a tu cuenta</p>
      </li>
    </ul>
	</div>

	<div id="questions-list" class="clearfix">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <fieldset class="clearfix">
        <legend>Accede a tu cuenta</legend>
        <p>
          <%= f.label :email %>
          <%= f.email_field :email %>
        </p>

        <p>
          <%= f.label :password %>
          <%= f.password_field :password %>
        </p>
      </fieldset>

      <div class="clearfix">
        <button type="submit" name="commit" id="user_submit">Entra!</button>

        <% if devise_mapping.rememberable? -%>
          <small>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </small>
        <% end -%>
      </div>

      <p class="clearfix">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
          <%= link_to "¿Has olvidado tu contraseña?", new_password_path(resource_name) %><br />Te la enviaremos por correo.
        <% end -%>
      </p>
    <% end %>

    <div class="login-sidebar">
      <p class="goto-login"> ¿No tienes cuenta?
        <%= link_to "Regístrate!", new_registration_path(resource_name) %><br />
      </p>

      <p>
        Entra con tu perfil de <strong>Facebook</strong> o <strong>Twitter</strong> para usar esta web de forma más cómoda.
      </p>

      <p>
        <%- if devise_mapping.omniauthable? %>
    	    <%= link_to content_tag(:span, "Entra con Facebook"), omniauth_authorize_path(resource_name, :facebook), :class => "fb-connect" %>
    	    <%= link_to content_tag(:span, "Entra con Twitter"), omniauth_authorize_path(resource_name, :twitter), :class => "twitter-connect" %>
        <% end -%>
      </p>
    </div>
	</div>
</div>