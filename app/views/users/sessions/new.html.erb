<%= render :partial => "shared/links" %>


<% title("Accede a tu cuenta") %>

<div id="login" class="static">
	<div id="questions-header" class="answers-header">
    <ul id="breadcrumb" itemprop="breadcrumb">
      <li class="breadcrumb-item breadcrumb-home"><a href="/" title="Ir a la Portada"><span>Portada</span></a></li>
      <li class="breadcrumb-item breadcrumb-tag">
        <p>Accede a tu cuenta</p>
      </li>
    </ul>
	</div>

	<div id="questions-list" class="clearfix">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <fieldset class="clearfix">
        <legend>Accede a tu cuenta</legend>
        <p>
          <%= f.label :email %>
          <%= f.email_field :email %>
        </p>

        <p>
          <%= f.label :password %>
          <%= f.password_field :password %>
        </p>
      </fieldset>

      <div class="clearfix">
        <button type="submit" name="commit" id="user_submit">Accede</button>

        <% if devise_mapping.rememberable? -%>
          <small>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </small>
        <% end -%>
      </div>

      <p class="clearfix">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
          <%= link_to "Has olvidado tu contraseÃ±a?", new_password_path(resource_name) %><br />Te la enviaremos por correo.
        <% end -%>
      </p>
    <% end %>
	</div>
</div>