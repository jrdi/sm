<% if @vote.errors.blank? %>
  var value = {
    "1" : "up",
    "-1" : "down"
  };

  $("#answer-<%= @vote.votable.id %> ." + value['<%= @vote.value %>']).addClass('voted');
  $("#answer-<%= @vote.votable.id %> .votes_count").remove();
  $("#answer-<%= @vote.votable.id %> .buttons").append("<div class='votes_count <%= answer_votes_class(@vote.votable) %>' title='<%= answer_votes_title(@vote.votable) %>'><i class='icon-caret-" + value['<%= @vote.value %>'] + "'></i><%= @vote.votable.votes_count %></div>");
<% else %>
  window.scrollTo(0, 125);
  $('.alerts-js').append("<div class=\"alert error error-js\">Ya has votado esta respuesta, amigo!</div>");
  $('.error-js').delay(5000).fadeOut();
  setTimeout( function(){
    $('.error-js').remove();
  }, 5400);
<% end %>